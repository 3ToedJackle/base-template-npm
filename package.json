{
  "name": "npm-base-template",
  "version": "0.2.0",
  "description": "Squarespace Base Template using NPM",
  "author": "Squarespace, Inc.",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "postinstall": "squarespace setup",
    "build": "squarespace assemble --noscripts && webpack --display-modules",
    "watch": "squarespace assemble --watch --noscripts & webpack --watch --hide-modules",
    "server": "squarespace runserver -d $PWD/build",
    "authserver": "squarespace runserver -d $PWD/build --run-authenticated",
    "start": "squarespace setup && (npm run watch & npm run server)",
    "deploy": "squarespace setup && squarespace deploy"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:Squarespace/base-template-npm.git"
  },
  "dependencies": {
    "@sqs/core": "^0.1.5"
  },
  "devDependencies": {
    "dotenv": "^2.0.0",
    "@squarespace/toolbelt": "^0.6.1",
    "webpack": "^1.12.9"
  }
}
